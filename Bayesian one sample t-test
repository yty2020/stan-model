  data {
    int<lower=1> Ntotal ;
    real y[Ntotal] ;
    real meanY ;
    real sdY ;
  }
  transformed data {
    real unifl ;
    real unifh ;
    real normalSigma ;
    unifl <- sdY/1000 ;
    unifh <- sdY*1000 ;
    normalSigma <- sdY*100 ;
  }
  parameters {
    real mu ;
    real<lower=0> sigma ;
  }
  model {
    sigma ~ uniform( unifl , unifh ) ;
    mu ~ normal( meanY , normalSigma ) ; 
    y ~normal( mu , sigma ) ;
  }
  generated quantities{
    real effectsize;
    effectsize<-(mu-0)/sigma;
  }
