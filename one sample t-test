  data {
    int<lower=1> Ntotal ;
    real y[Ntotal] ;
    real meanY ;
    real sdY ;
  }
  transformed data {
    real uniflo ;
    real unifli ;
    real normalSigma ;
    unifLo <- sdY/1000 ;
    unifHi <- sdY*1000 ;
    normalSigma <- sdY*100 ;
  }
  parameters {
    real mu ;
    real<lower=0> sigma ;
  }
  model {
    sigma ~ uniform( uniflo , unifhi ) ;
    mu ~ normal( meanY , normalSigma ) ; 
    y ~normal( mu , sigma ) ;
  }
